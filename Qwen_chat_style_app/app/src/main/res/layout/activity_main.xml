<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:fitsSystemWindows="true"
    android:padding="8dp"
    tools:context=".MainActivity">

    <!-- Chat view with floating clear button -->
    <FrameLayout
        android:id="@+id/chatFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/thinkingToggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:padding="8dp" />


    </FrameLayout>

    <!-- Optional thinking toggle -->
    <CheckBox
        android:id="@+id/thinkingToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Thinking"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/chatFrame"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Input + Send/Stop button combo -->
    <LinearLayout
        android:id="@+id/inputRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/thinkingToggle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <EditText
            android:id="@+id/userInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext"
            android:gravity="top|start"
            android:hint="Enter your prompt"
            android:textColorHint="#AAAAAA"
            android:imeOptions="actionSend"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:minLines="2"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <FrameLayout
            android:id="@+id/sendStopSwitcher"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp">

            <Button
                android:id="@+id/sendButton"
                style="@style/SendButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Send" />

            <Button
                android:id="@+id/stopButton"
                style="@style/StopButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Stop"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
